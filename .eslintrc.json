{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "airbnb"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [],
  "rules": {
    "react/jsx-filename-extension" : [1, { "extensions": [".js", ".jsx"] }], // 1 warn
    "no-use-before-define": [1, { "functions": true, "classes": true }],
    "no-param-reassign": [0],
    "no-plusplus": [0],
    "import/prefer-default-export": [0],
    "global-require": [0],
    "no-return-assign": [0]
  }
}
